<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_chat"
    android:orientation="vertical">

    <!-- HEADER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkblue"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingTop="10dp"
        android:paddingEnd="8dp"
        android:paddingBottom="10dp">

        <!-- Tombol panah kembali -->
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:clickable="true"
            android:contentDescription="@string/btnback_description"
            android:focusable="true"
            android:padding="4dp"
            android:src="@drawable/ic_arrow_left"
            app:tint="@android:color/white" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/logo_teman_tidur"
                android:src="@drawable/icon_app" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/travel_journal"
                    android:text="@string/teman_tidur"
                    android:textColor="@android:color/white"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/travel_journal"
                    android:text="@string/teman_tidur_tagline"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Spacer kanan sama dengan icon back 32dp -->
        <View
            android:layout_width="32dp"
            android:layout_height="32dp" />
    </LinearLayout>

    <!-- CONTAINER CHAT + INPUT BERSATU -->
    <LinearLayout
        android:id="@+id/chat_and_input_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_card_3"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingTop="6dp"
        android:paddingEnd="12dp"
        android:paddingBottom="6dp">

        <FrameLayout
            android:id="@+id/chat_content_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/logo_background"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:alpha="0.15"
                android:contentDescription="@string/background_logo"
                android:src="@drawable/icon_app" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/chat_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:orientation="vertical"
                tools:listitem="@layout/item_chat_voice_outgoing" />
        </FrameLayout>

        <!-- INPUT MESSAGE dengan icon mic dan send -->
        <LinearLayout
            android:id="@+id/input_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="28dp"
                app:cardElevation="6dp">

                <EditText
                    android:id="@+id/et_chat_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="top"
                    android:hint="@string/chat_hint"
                    android:imeOptions="actionSend"
                    android:inputType="textMultiLine|textCapSentences"
                    android:maxHeight="140dp"
                    android:maxLines="3"
                    android:minHeight="56dp"
                    android:paddingStart="20dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="16dp"
                    android:scrollbars="vertical"
                    android:textColor="@color/darkblue"
                    android:textColorHint="@color/darkblue" />
            </androidx.cardview.widget.CardView>

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="12dp">

                <!-- CardView MIC -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_mic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    app:cardBackgroundColor="@color/softmagenta"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="6dp">

                    <ImageView
                        android:id="@+id/btn_mic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:contentDescription="@string/btnrecord_description"
                        android:focusable="true"
                        android:padding="14dp"
                        android:src="@drawable/ic_mic"
                        app:tint="@color/white" />
                </androidx.cardview.widget.CardView>

                <!-- CardView SEND -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_send"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/softmagenta"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="6dp">

                    <ImageView
                        android:id="@+id/btn_send_message"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:contentDescription="@string/btnsend_description"
                        android:focusable="true"
                        android:padding="14dp"
                        android:src="@drawable/ic_send"
                        app:tint="@color/white" />
                </androidx.cardview.widget.CardView>
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
