<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkblue"
    android:orientation="horizontal"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/widget_face_emoji_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_circle_white"
            android:gravity="center"
            android:padding="2dp">

            <ImageView
                android:id="@+id/face_emoji"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_face_home" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget_chat_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/widget_chat_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_chat"
            app:tint="@color/softmagenta" />

        <TextView
            android:id="@+id/widget_chat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/nav_chat"
            android:textColor="@color/softmagenta"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget_emotion_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/widget_emotion_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/emotion_happy"
            app:tint="@color/softmagenta" />

        <TextView
            android:id="@+id/widget_emotion_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/nav_emotion_check"
            android:textColor="@color/softmagenta"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget_recommendation_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/widget_recommendation_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_book_open"
            app:tint="@color/softmagenta" />

        <TextView
            android:id="@+id/widget_recommendation_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/recommendation"
            android:textColor="@color/softmagenta"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>